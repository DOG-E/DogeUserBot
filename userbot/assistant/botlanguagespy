from re import compile

from telethon import Button
from telethon.events import CallbackQuery

from . import check_owner, doge, get_back_button, mention, sgvar

plugin_category = "bot"


@doge.bot.on(CallbackQuery(data=compile(r"lang_menu")))
@check_owner
async def setlang(event):
    buttons = [
        Button.inline(
            "",
            data=f"set_{dogelang}",
        )
    ]
    buttons.append([Button.inline(f"ğŸ¾ Má´‡É´á´œ", data="mainmenu")])
    await event.edit(
        f"**ğŸ¶ [DoÉ¢á´‡ Usá´‡Ê€Boá´›](https://t.me/DogeUserBot)\
        \n{lan('menutext').format(mention)}\
        \n\
        \nğŸŒ {lan('doges_languages')}:**",
        buttons=buttons,
        link_preview=False,
    )


